{
    "image" : "mcr.microsoft.com/devcontainers/python:3.10",
    "features": {
        "ghcr.io/rocker-org/devcontainer-features/apt-packages": "1.0.2",
        "ghcr.io/devcontainers/features/powershell": "1.2.0"
        
      },
         "customizations": {
            "vscode": {
                "settings": {
                    "go.toolsManagement.checkForUpdates": "local",
                    "theme": "vs-dark",
                },
                "extensions": [
                        "GitHub.vscode-pull-request-github",
                        "ms-python.python",
                        "ms-python.vscode-pylance",
                        "ms-toolsai.jupyter",
                        "ms-vscode.powershell"
                    ]

            }
        },

        "onCreateCommand":[
            "pwsh -command install-module -force  az.resources,MSAL.PS",
            "pip install ipykernel jupyter powershell_kernel",
            "python -m powershell_kernel.install --powershell-command pwsh",
            "cd ./validate_token_python",
            "pip install -r ./requirements.txt"
        ]

}
